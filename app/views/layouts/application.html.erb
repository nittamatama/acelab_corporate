<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %>AcelabCorporate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><%= link_to 'ACEラボ', '/', method: :get %></h1>
        <% if admin_signed_in? %>
          <div class="user_nav grid-6">
            <%= button_to "ログアウト", destroy_admin_session_path, method: :delete %>
            <a class="post" href="/posts/new">投稿する</a>
          </div>
        <% else %>
          <div class="user_nav grid-6">
            <%= link_to "ログイン", new_admin_session_path, class: "post" %>
            <%= link_to "新規登録", new_admin_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
